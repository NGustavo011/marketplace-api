generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  name       String
  email      String
  password   String
  cpf        String
  role       UserRole
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  orderItems OrderItem[]
  products   Product[]
}

model Category {
  id          String      @id @default(uuid())
  name        String
  description String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  products    Product[]
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  listPrice   Decimal
  salePrice   Decimal
  sellerId    String
  categoryId  String
  urlImage    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  category    Category @relation(fields: [categoryId], references: [id])
  seller      User     @relation(fields: [sellerId], references: [id])
}

model Order {
  id               String      @id @default(uuid())
  buyerId          String
  sellerId         String
  paymentMethod    String
  status           OrderStatus
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  orderItems       OrderItem[]
  txId             String
  qrCode           String
  qrCodeImage      String
  qrCodeExpiration DateTime
}

model OrderItem {
  id          String   @id @default(uuid())
  name        String
  description String
  listPrice   Decimal
  salePrice   Decimal
  sellerId    String
  categoryId  String
  urlImage    String
  quantity    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderId     String
  category    Category @relation(fields: [categoryId], references: [id])
  order       Order    @relation(fields: [orderId], references: [id])
  seller      User     @relation(fields: [sellerId], references: [id])
}

enum UserRole {
  admin
  user
}

enum OrderStatus {
  pending
  canceled
  finished
}
